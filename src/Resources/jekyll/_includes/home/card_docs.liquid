{% for node in site.pages %}
    {% if node.title != null %}
        {% if node.permalink contains "docs/" %}


            <div class="item item-orange col-lg-4 col-6">
                <div class="item-inner">
                    <div class="icon-holder">
                        <i class="icon fa fa-book"></i>
                    </div>

                    <h3 class="title">{{ site.data.core.docs.title }}</h3>
                    <p class="intro">{{ site.data.core.docs.subtitle }}</p>

                    <a class="link" href="documentation.html"><span></span></a>
                </div>
            </div>

            {% break %}

        {% endif %}
    {% endif %}
{% endfor %}


