{
    "name":                 "splash/console",
    "description":          "Console Application for All Splash Php Applications",

    "type":                 "package",    
    "minimum-stability":    "dev",
    "prefer-stable":        true,
    "license":              "MIT",

    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "Bernard Paquier",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],
    
    "bin": ["bin/splash"],

    "autoload": {
        "psr-4": { 
            "Splash\\Console\\": "src/"
        }
    },
    
    "autoload-dev": {
        "classmap": [ "tests/Kernel.php" ]
    },

    "require": {
        "php":                                      "~7.2",
        "symfony/console":                          "~3.4|~4.0"
    },
    
    "require-dev": {
        "symfony/symfony":                          "~3.4|~4.0",
        "symfony/monolog-bundle":                   "*",
        "monolog/monolog":                          "^1.0",
        "psr/simple-cache":                         "*",

        "doctrine/doctrine-bundle":                 "^1.6",
        "doctrine/orm":                             "^2.5",        
        
        "splash/phpcore":                           "dev-master", 
        "splash/faker":                             "dev-master",
        "splash/php-bundle":                        "dev-master",

        "phpunit/phpunit":                          "~7.0|~8.0|~9.0",
        "phpro/grumphp":                            "^0.19|^1.0",
        "composer/composer":                        "^2.0",
        "sensiolabs/security-checker":              "^5.0",
        "php-parallel-lint/php-parallel-lint":      "^1.0",
        "sclable/xml-lint":                         "^0.2.4",
        "seld/jsonlint":                            "^1.7",
        "j13k/yaml-lint":                           "^1.1",
        "friendsofphp/php-cs-fixer":                ">2.10",
        "phpmd/phpmd":                              "^2.6",
        "sebastian/phpcpd":                         ">3.0",
        "squizlabs/php_codesniffer":                "^3.2",
        "phpstan/phpstan":                          "^0.12",
        "phpstan/phpstan-phpunit":                  "^0.12"
    },

    "scripts": {
        "post-install-cmd": [
            "php vendor/bin/grumphp git:deinit"
        ],
        "post-update-cmd": [
            "php vendor/bin/grumphp git:deinit"
        ]
    }
}
